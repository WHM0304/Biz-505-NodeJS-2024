extends layout

block content
    style.
        body{
            display : flex;
        }
        section.image {
            flex : 1 ;
        }
        section.discript {
            flex:3;
        }
    section.image
        img(src=`${BOOK.image}`, width="200px")
    section.discript
        div
            strong ISBN
            sapn= BOOK.isbn
        div
            strong 도서명
            sapn= BOOK.title
        div
            strong 네이버 쇼핑
            sapn
                a(href= BOOK.link, target="_new") 바로가기
        div
            strong 출판사
            sapn= BOOK.publisher
        div
            strong 저자
            sapn= BOOK.author
        div
            strong 할인가
            sapn= BOOK.discount
        div
            strong 출판일
            sapn= BOOK.pubdate
        div
            strong 설명
            sapn= BOOK.description 